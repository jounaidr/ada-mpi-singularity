Bootstrap: docker
From: ubuntu:24.04

%files
    mpitest.c /opt

%environment
    export MPICH_DIR=/opt/mpich-4.3.2
    export SINGULARITY_MPICH_DIR=$MPICH_DIR
    export SINGULARITYENV_APPEND_PATH=$MPICH_DIR/bin
    export SINGULAIRTYENV_APPEND_LD_LIBRARY_PATH=$MPICH_DIR/lib
    export DEBIAN_FRONTEND=noninteractive
    export TZ=Europe

%post
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
    echo "Installing required packages..."
    apt-get update && apt-get install -y wget git bash gcc gfortran g++ make

    # Information about the version of MPICH to use
    export MPICH_VERSION=4.3.2
    export MPICH_URL="http://www.mpich.org/static/downloads/$MPICH_VERSION/mpich-$MPICH_VERSION.tar.gz"
    export MPICH_DIR=/opt/mpich

    #install python3.11 & mpi4py
    apt install -y software-properties-common
    add-apt-repository ppa:deadsnakes/ppa
    apt update
    apt install -y python3.11
    apt install -y python3.11-distutils
    apt install -y python3-pip
    #libmpich-dev required for mpi4py
    apt install -y libmpich-dev

    #python3.11 -m pip install https://github.com/mpi4py/mpi4py/tarball/master
    python3.11 -m pip install mpi4py


    echo "Installing MPICH..."
    mkdir -p /tmp/mpich
    mkdir -p /opt
    # Download
    cd /tmp/mpich && wget -O mpich-$MPICH_VERSION.tar.gz $MPICH_URL && tar xzf mpich-$MPICH_VERSION.tar.gz
    # Compile and install
    cd /tmp/mpich/mpich-$MPICH_VERSION && ./configure --prefix=$MPICH_DIR && make install
    # Set env variables so we can compile our application
    export PATH=$MPICH_DIR/bin:$PATH
    export LD_LIBRARY_PATH=$MPICH_DIR/lib:$LD_LIBRARY_PATH
    export MANPATH=$MPICH_DIR/share/man:$MANPATH

    echo "Compiling the MPI application..."
    cd /opt && mpicc -o mpitest mpitest.c


    #install refl1d
    python3.11 -m pip install numpy==1.21.5
    python3.11 -m pip install refl1d
